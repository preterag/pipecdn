{
  "node": {
    "name": "pipe-network-example-node",
    "wallet_address": "EXAMPLE_WALLET_ADDRESS",
    "region": "us-west",
    "description": "Example Pipe Network node configuration",
    "wallet": "your_wallet_address_here",
    "email": "your_email@example.com",
    "ports": {
      "http": 80,
      "https": 443,
      "management": 8003
    }
  },
  "network": {
    "port": 8003,
    "firewall_enabled": true,
    "allow_metrics": true,
    "enable_privileged_ports": true,
    "enable_ipv6": false,
    "dns_servers": [
      "1.1.1.1",
      "8.8.8.8"
    ]
  },
  "monitoring": {
    "dashboard_enabled": true,
    "dashboard_port": 8081,
    "metrics_interval": 60,
    "log_level": "info"
  },
  "backup": {
    "enabled": true,
    "schedule": "daily",
    "retention_days": 7,
    "include_logs": true
  },
  "community_enhancements": {
    "pulse_monitoring": true,
    "historical_tracking": true,
    "auto_update_check": true,
    "port_forwarding_check": true
  },
  "logs": {
    "level": "info",
    "max_size": "50M",
    "retention": 7
  },
  "metrics": {
    "enable_collection": true,
    "history_days": 30
  },
  "maintenance": {
    "auto_update": true,
    "auto_backup": true,
    "backup_interval_days": 7
  }
} 