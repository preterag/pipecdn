{
  "node": {
    "name": "community-enhanced-node",
    "wallet_address": "YOUR_WALLET_ADDRESS_HERE",
    "region": "your-region",
    "description": "Pipe Network node with community enhancements"
  },
  "network": {
    "port": 8003,
    "firewall_enabled": true,
    "allow_metrics": true,
    "enable_privileged_ports": true
  },
  "monitoring": {
    "dashboard_enabled": true,
    "dashboard_port": 8081,
    "metrics_interval": 60,
    "log_level": "info"
  },
  "backup": {
    "enabled": true,
    "schedule": "daily",
    "retention_days": 7,
    "include_logs": true
  },
  "community_enhancements": {
    "pulse_monitoring": true,
    "historical_tracking": true,
    "auto_update_check": true
  }
} 